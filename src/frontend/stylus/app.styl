@import "./_reset"

*
  box-sizing border-box

html
  font-size 12px
  
body
  padding 1em

td, th 
  border 1px solid #000
  border-collapse collapse
  text-align left
  padding 10px
th
  font-weight bold
  font-style italic
  
h1
  font-size 250%
  font-weight bold
  margin-bottom 1em
  span.version
    font-size 50%
    margin-left 0.5em
    font-weight normal
    
h2
  font-size 200%
  font-weight bold
  margin 1em 0 0.5em
  
table
  margin-bottom 4em

table#clients
  tr.me
    font-weight bold
  
pre
  font-family monospace  
  
  
footer
  border-top 1px solid #ccc
  padding-top 1em
  margin-top 3em
  ul
    display block
    li
      display inline-block
      color #999
      &:before
        display inline-block
        content '/'
        padding 0 0.5em
      &:first-child:before
        display none
  
  
  